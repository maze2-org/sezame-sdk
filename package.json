{
  "name": "@maze2/sezame-sdk",
  "title": "The Sezame SDK library",
  "description": "The Sezame SDK library handling the crypto wallet interactions",
  "author": "Maze2",
  "version": "1.7.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepare": "tsdx build",
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src test",
    "lint-fix": "tsdx lint --fix src test",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "jsdoc2md \"./src/**/*.ts\" --configure ./jsdoc2md.json --template README.hbs > ./README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/sezame-sdk.esm.js",
  "size-limit": [
    {
      "path": "dist/sezame-sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sezame-sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@size-limit/preset-small-lib": "5.0.3",
    "@types/bitcore-lib": "0.15.3",
    "@types/lodash": "^4.14.202",
    "husky": "7.0.2",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^7.1.0",
    "postinstall-prepare": "^2.0.0",
    "size-limit": "5.0.3",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typescript": "^4.4.2"
  },
  "keywords": [
    "crypto",
    "bitcoin",
    "wallet",
    "typescript"
  ],
  "homepage": "https://iabsis.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maze2-org/sezame-sdk.git"
  },
  "dependencies": {
    "@alephium/web3": "^1.0.5",
    "@alephium/web3-wallet": "^1.0.5",
    "@metamask/eth-sig-util": "^4.0.0",
    "@polkadot/keyring": "5.9.2",
    "@polkadot/util": "5.9.2",
    "@polkadot/util-crypto": "5.9.2",
    "assert": "^2.1.0",
    "avn-api": "4.0.1",
    "axios": "0.21.1",
    "bignumber": "^1.1.0",
    "bignumber.js": "9.0.1",
    "bip32": "2.0.6",
    "bip39": "3.0.4",
    "bitcoin-address-validation": "2.2.1",
    "bitcoinjs-lib": "5.2.0",
    "bitcore-lib": "8.25.10",
    "blakejs": "^1.2.1",
    "coinselect": "3.1.12",
    "decimal.js": "10.3.1",
    "ethereumjs-wallet": "1.0.1",
    "fetch-retry": "^5.0.6",
    "hdkey": "2.0.1",
    "isomorphic-fetch": "^3.0.0",
    "lodash": "^4.17.21",
    "react-native-quick-crypto": "^0.6.1",
    "web3": "1.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 30000
  },
  "types": "./dist/index.d.ts"
}
